@using Bulky.DataAccess
@using Bulky.Models
@model Category
<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Create Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="border p-3">
                <div class="mb-3 row">
                    <label asp-for="@Model.Name" class="col-md-3 col-form-label text-center"></label> <div class="col-md-9"> <input asp-for="@Model.Name" class="form-control" placeholder="Enter category name" /> <span asp-validation-for="Name" class="text-danger mt-1 d-block"></span> </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="@Model.DisplayOrder" class="col-md-3 col-form-label text-center"></label> <div class="col-md-9"> <input asp-for="@Model.DisplayOrder" class="form-control" placeholder="Enter display order" /> <span asp-validation-for="DisplayOrder" class="text-danger mt-1 d-block"></span> </div>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="category" asp-action="index" class="btn btn-light border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}