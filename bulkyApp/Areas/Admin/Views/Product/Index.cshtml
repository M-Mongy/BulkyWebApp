@using Bulky.Model.Models
@model List<Product>
<partial name="_notfication" />

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-white py-2">Product List</h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Product" asp-area="admin" asp asp-action="Upsert" class="btn bg-primary text-bg-dark btn-outline-light">
                        <i class="bi bi-plus-circle"></i> Create New Product
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <table id="tblData" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>List Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @* The tbody should be empty, DataTables fills it *@
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}