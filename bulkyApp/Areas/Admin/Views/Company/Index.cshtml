@model List<Company>
<partial name="_notfication" />

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-6">
                    <h2 class="text-white py-2">Company List</h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Company" asp-area="Admin" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Company
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Street Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Phone Number</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @* The tbody should be empty, DataTables fills it *@
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
